/* pages/myCenter/myCenter.wxss */
.center{
  font-size: 30px;
}
.userinfo{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}
.userinfo-avatar {
  width: 120px;
  height: 120px;
  display: block;
  border-radius: 50%;
  margin: 0 20rpx;
}
.selectList{
  height: 50px;
  border-bottom: 1px rgba(2, 2, 2, 0.1) dashed ;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction:row;
}
.btn{
  border-radius: 20px;
  background: rgb(255,107,0);
  width: 90%;
  margin-left: 5%;
  position:fixed;
  bottom:20px;
}