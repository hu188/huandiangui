/* pages/menu/menu.wxss */

.userinfo{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  height: 120px;
  margin-left: 15px;
}

.userinfo-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: 0 20rpx;
}
.enter{
 display: flex;
 align-items: center
}
.nickName{
 font-size: 22px;
}
.signature{
   font-size: 13px;
   color: #888;
   margin-top: 25px;
}
.empty{
  background-color:rgb(245,245,245);
  height: 12px;
}
.demo-container{
  background:#fff;
  width:50%;
  height: 100%;
}


.order-list-all {
  background: #fff;
  box-sizing: border-box;
  padding: 0px 10px;
  margin-bottom: 10px;
}

.order-list-all navigator {
  border-bottom: 1px solid #f2f2f2;
}

.order-list-all navigator:last-child {
  border-bottom: none;
}

.tab_div {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  
}
.orderList {
height:auto;
display:block;
background:#fff;
padding:10px;
box-sizing:border-box;

}


.ico1 {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ico1 image {
  width: 28px;
  height: 28px;
  margin-right: 10px;
}

.ico2 image {
  width: 12px;
  height: 13px;
  opacity:0.6;
}
.tab_span {
  font-size: 14px;
  color: #000;
}