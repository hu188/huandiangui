/* pages/login/login.wxss */
.name{
  font-size: 30px;
  margin-top: 100px;
  margin-bottom: 50px;
}
.body{
  margin: 25px;
}
.phoneNumber{
  border-bottom: 1px #E1E2E4 solid;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  margin-top: 25px;
}

.yzm{
  font-size: 16px;
}
.yzm-no{
  font-size: 16px;
  color: #808080;
}
.txt{
  margin-left: 15px;
  width: 180px;
}
.zcxy{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  margin-top: 25px;
  font-size: 16px;
}
.btn{
  border-radius: 20px;
  background: rgb(255,107,0);
  margin-top: 20px;
}
.i-modal {
position:fixed;
top:0;
left:0;
right:0;
bottom:0;
background:rgba(0,0,0,.7);
z-index:1000;
transition:all .2s ease-in-out;
display: flex;
align-items: center;
justify-content: center;
flex-direction: column;


}
.canvas {
    width: 100px;
    height: 36px;
    border-radius: 14px;
}
.yzm-model{
  width:280px;
  height: 180px;
  background: #fff;
  
}
.yzm-model-flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
   height: 90%;
}
.close{
  display: flex;
   justify-content: flex-end;
}

.content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 200px;
}
.iptbox{
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #DDD;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ipt{
  width: 0;
  height: 0;
}
.btn-area{
  width: 80%;
  background-color: orange;
  color:white;
}
.yam-sx{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}